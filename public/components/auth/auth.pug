- var currClass = auth ? 'auth' : 'reg'

.auth-content
    div(class=currClass)
        if auth
            div(class=`${currClass}__auth-head`) Авторизация
        else
            div(class=`${currClass}__auth-head`) Регистрация
        form(class=`${currClass}__auth-form` name=authFormName)
            each input in inputs
                input(
                    type=input.type
                    name=input.name
                    placeholder=input.placeholder
                    class='text-inputs'
                )
            input(class=`${currClass}__auth-btn` type='button' name=submitButtonName value=auth ? 'Войти' : 'Создать аккаунт')
        if auth
            a(class=`${currClass}__auth-a` href='/reg') Еще нет аккаунта?
        else
            a(class=`${currClass}__auth-a` href='/auth') Уже есть аккаунт?
