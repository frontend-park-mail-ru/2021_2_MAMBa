mixin calendarCard (i)
    div.premiere__item
        a(class = "premiere__image _ibg" href=`${i.href}`)
            img(src=i.filmAvatar alt ="")
        div.premiere__body
            div.premiere__main-info
                div.premiere__info
                    a(class = "premiere__title" href=`${i.href}`) #{i.title}
                    //TODO: do when backend done
                    //div.premiere__subtitle #{i.titleOriginal}
                    //div.premiere__year #{i.year}
                div.premiere__rating
                    div.premiere__subtitle Рейтинг фильма
                    div.rating__score
                        div(class = "premiere__rating_number") #{i.rating}
            div.premiere__description #{i.description}
                //TODO: do when backend done
            div(class = "premiere__text text")
        div.premiere__date
            div.premiere__day  #{i.day}
            div.premiere__month #{i.month}



