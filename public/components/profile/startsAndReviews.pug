.profile-content
    each block in reviewBlocks
      .review-block
          img.film-img(src=block.film_img)
          span #{block.stars_count}
          span.film-name-ru #{block.film_name_ru}
          span.film-name-en #{block.film_name_en}
          if (block.review_text)
              span.review-text #{block.review_text}
              a.to-review(href=block.review_url)
          else
              a.write-review(href=block.film_url)
