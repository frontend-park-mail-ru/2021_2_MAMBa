.carousel-random
    figure.carousel-random__card-container
        each card in cardList
          .carousel-random__card
              a(href=`https://film4u.club/films/${card.id}`)
                img(src=card.poster_url)
    .carousel-random__btn-container
        .carousel-random__prev-btn Назад
        .carousel-random__next-btn Вперед
